<script type="text/javascript">
var stud_marks=[];
var avg_marks=[];
var max_marks=[];
var xaxis=[];
var d ={{data|safe}};
var avg_marks_list=d[0];
var max_marks_list=d[1];
var student_marks_list=d[2]
for (var i in student_marks_list)
{
    xaxis[i]=student_marks_list[i][0]+student_marks_list[i][1];
    stud_marks[i]=(student_marks_list[i][2])*100;
    avg_marks[i]=(avg_marks_list[i][2])*100;
    max_marks[i]=(max_marks_list[i][2])*100;

}




$(function () {
    $('#container').highcharts({
        chart: {
            type: 'column'
        },
        title: {
            text: 'Student Performance quiz wise'
        },
        
        xAxis: {
            categories: xaxis,
            crosshair: true
        },
        yAxis: {
            min: 0,
	    max: 100,
            title: {
                text: 'Marks(%)'
            }
        },
        tooltip: {
            headerFormat: '<span style="font-size:10px">{point.key}</span><table>',
            pointFormat: '<tr><td style="color:{series.color};padding:0">{series.name}: </td>' +
                '<td style="padding:0"><b>{point.y:.1f} </b></td></tr>',
            footerFormat: '</table>',
            shared: true,
            useHTML: true
        },
        plotOptions: {
            column: {
                pointPadding: 0.2,
                borderWidth: 0
            }
        },
        series: [{
            name: 'Maximum',
            data: max_marks

        }, {
            name: 'Average',
            data: avg_marks

        }, /*{
            name: 'Minimum',
            data: [48.9, 38.8, 29.3, 38.4, 57.0, 38.3, 49.0, 49.6, 52.4, 55.2, 49.3, 31.2]

        }, */{
            name: 'Marks Obtained',
            data: stud_marks

        }]
    });
});
</script>
