var xdata= [];
var ydata=[]
var result = {{data|safe}}
for ( var obj in result)
{
	xdata[obj] =result[obj][0];
        ydata[obj] = result[obj][1];
       
}


$(function () {
    $('#insti_count').highcharts({
       
