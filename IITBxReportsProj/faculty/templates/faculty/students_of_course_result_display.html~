<script>
document.getElementById('showlist').onclick = function() {
    var obj = document.getElementById("dropdown_menu");
    var course = obj.options[obj.selectedIndex].text;
    str = "{{request.get_host}}"
     window.location= str+"/faculty/stuofcrs/"+ {{ fac_id }} + "/" + course +"/1/10";  
};

$('#pagination-demo').twbsPagination({
    totalPages: {{ total_pages }},
    visiblePages: 7,
    startPage:{{ page_no }},
    onPageClick: function (event, page) {
    	str = "{{request.get_host}}"
        var loc=str+"/faculty/stuofcrs/{{ fac_id }}/{{ cname }}/"+page.toString()+"/"+$('#entries').text();
        $(location).attr('href',loc);
    }
});

$("#goto").click(function(){
    var pg=$("#focusedInput").val();
    var total_pg={{ total_pages }};
    
    if((Number(pg)<=Number(total_pg)) && (Number(pg)>0)){
    str="{{request.get_host}}"
        var loc=str+"/faculty/stuofcrs/{{ fac_id }}/{{ cname }}/"+pg.toString()+"/"+$('#entries').text();
        $(location).attr('href',loc);       
    }
    else{
        alert("Please enter the correct page number");
    }

});

$(".dropdown-menu li a").parents('.btn-group').find('.dropdown-toggle').html({{ no_of_entries }}+'<span class="caret"></span>');

$(".dropdown-menu li a").click(function(){
  var entries = $(this).text();
  str="{{request.get_host}}"
  window.location=str+"/faculty/stuofcrs/{{ fac_id }}/{{ cname}}/"+{{ page_no }}+"/"+entries;
});

$("#focusedInput").keyup(function(event){
    if(event.keyCode == 13){
        $("#goto").click();
    }
});

</script>
